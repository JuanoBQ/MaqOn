{
  "kind": "collectionType",
  "collectionName": "blog_categories",
  "info": {
    "singularName": "blog-category",
    "pluralName": "blog-categories",
    "displayName": "Blog Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "category": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "category",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false
    },
    "color": {
      "type": "string"
    },
    "icon": {
      "type": "string"
    },
    "blog_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "blog_category"
    }
  }
}
